<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Yumplace">

        <!-- LOGIN: pantalla inicial -->
        <activity
            android:name="controlador.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- REGISTER -->
        <activity
            android:name="controlador.RegisterActivity"
            android:exported="false" />

        <!-- FEED -->
        <activity
            android:name="controlador.FeedActivity"
            android:exported="false" />

        <!-- MAIN (si la mantienes en el proyecto) -->
        <activity
            android:name="com.engiri.yumplace.MainActivity"
            android:exported="false" />

    </application>

</manifest>
